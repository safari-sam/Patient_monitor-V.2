# ============================================================================
# Smart Patient Room Monitor - Environment Variables
# ============================================================================
# 
# FOR GITHUB CODESPACES:
# These are set in: Repository Settings → Secrets → Codespaces
#
# FOR LOCAL DEVELOPMENT:
# Copy this file to .env and fill in real values
#
# ============================================================================

# --- Authentication ---
JWT_SECRET=REPLACE_WITH_SECURE_RANDOM_STRING
TOKEN_EXPIRATION_HOURS=24

# --- Database ---
DB_PASSWORD=REPLACE_WITH_SECURE_PASSWORD

# --- Server (usually no need to change) ---
HOST=0.0.0.0
PORT=8080
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_NAME=patient_monitor

# --- Application Settings ---
MOCK_MODE=true
SOUND_THRESHOLD=150
INACTIVITY_SECONDS=300
RUST_LOG=info
